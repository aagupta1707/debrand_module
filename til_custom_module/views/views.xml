<odoo>
    <data>
        <!-- Inherit Form View to Modify it -->
        <record id="view_stock_picking_inherit" model="ir.ui.view">
            <field name="name">stock_picking_inherit</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='move_ids_without_package']/tree/field[@name='product_id']" position="after">
                    <field name="dn_serial_number" attrs="{'readonly':[('state','in',['cancel','done'])]}"/>
                    <field name="carton_no" attrs="{'readonly':[('state','in',['cancel','done'])]}"/>
                </xpath>
            </field>
        </record>

        <record id="custom_sale_order_view_search_inherit" model="ir.ui.view">
            <field name="name">sale.order.search.inherit</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_sales_order_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='team_id']" position="after">
                    <field name="s_no"/>
                    <field name="project_name"/>
                </xpath>
            </field>
        </record>

        <!-- Inherit Form View to Modify it -->
        <record id="sale_order_form_inherit" model="ir.ui.view">
            <field name="name">sale_order_inherit</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='user_id']" position="after">
                    <field name="s_no"/>
                    <field name="project_name"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>